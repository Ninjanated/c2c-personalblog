{% block head %}
<style>
    .newsletter-content h1 {
        font-size: 2.5rem;
        margin-bottom: 2rem;
        color: var(--primary-color);
    }

    .newsletter-content p {
        margin-bottom: 1.5rem;
        font-size: 1.1rem;
    }

    .features {
        margin: 3rem 0;
    }

    .feature {
        display: flex;
        align-items: flex-start;
        margin-bottom: 2rem;
    }

    .feature-icon {
        font-size: 1.5rem;
        margin-right: 1rem;
        color: var(--primary-color);
    }

    .newsletter-form {
        background: #f8f9fa;
        padding: 2rem;
        border-radius: 8px;
        margin-top: 2rem;
    }

    .form-group {
        display: flex;
        gap: 1rem;
        margin-top: 1rem;
    }

    .form-group input {
        flex: 1;
        padding: 0.75rem;
        border: 2px solid #eee;
        border-radius: 4px;
        font-size: 1rem;
    }

    .form-group button {
        background-color: var(--primary-color);
        color: white;
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 4px;
        cursor: pointer;
        font-weight: 600;
    }
</style>
{% endblock %}

