---
layout: base.njk
---
<article class="blog-post">
    <header>
        <h1>{{ title }}</h1>
        {% if date %}
        <time datetime="{{ date | dateFormat }}">{{ date | dateFormat }}</time>
        {% endif %}
    </header>

    {{ content | safe }}

    <nav class="post-nav">
        <a href="/blog">← Back to all posts</a>
    </nav>
</article> 